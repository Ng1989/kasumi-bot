{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": "./src",
    "target": "es6",
    "lib": [
      "es2019"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@utils": ["./src/utils"]
    }
  },
  "include": [
    "./src",
    "typings"
  ],
  "exclude": [
    "node_modules"
  ]
}
